@page
@model MovieClubWebApplication.Pages.CommentRazor.CreateModel
@{
    ViewData["Title"] = "Create";
}
}
<h1>ایجاد ژانر جدید</h1>

<h4>اطلاعات ژانر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="commentInput.Text" class="control-label"></label>
                <input asp-for="commentInput.Text" class="form-control" />
                <span asp-validation-for="commentInput.Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">برگشت به صفحه اصلی</a>
</div>

@section Scripts
 {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


