@page
@model MovieClubWebApplication.Pages.GenreRazor.EditModel
@{
    ViewData["Title"] = "Edit Genre";
}

<h1>Edit</h1>
<h4>Genre List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="genreEdit.Select(x=>x.Id)" />
            <div class="form-group">
                <label asp-for="genreEdit.Select(x=>x.GenreName)" class="control-label"></label>
                <input asp-for="genreEdit.Select(x=>x.GenreName)" class="form-control" />
                <span asp-validation-for="genreEdit.Select(x=>x.GenreName)" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">All Lists</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}