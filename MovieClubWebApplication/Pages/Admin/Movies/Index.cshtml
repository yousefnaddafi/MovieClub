@page
@model MovieClubWebApplication.Pages.Admin.Movies.IndexModel
@{
    ViewData["Title"] = "MovieIndex";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.rtlcss.com/bootstrap/v4.5.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="Style/Style-Movie.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>

<body>
    <div class="container-fluid mt-3">
        <!--Left-->
        <div class="row p-1">
            <div class="col-lg-8 col-md-8">
                <!--Top Left-->
                <div class="row">
                    <div class="col-12">
                        <a href="./Create" class="Add-Link">
                            <div class="Add mr-auto ml-auto mt-1">
                                <i class="far fa-plus-square"></i>
                            </div>
                        </a>
                    </div>
                </div>
                <hr>
                <!--Posts-->
                <div class="row mt-3" id="Post">
                    <!--Icon Left Post-->
                    @foreach (var item in Model.movies)

                    {
                        <div class="col-7 col-sm-7 col-md-6 col-lg-6 col-xl-6 m-auto text-right" id="Content">
                            <a href="#" class="card-link">
                                <b class="card-title" style="margin-bottom: 0;"> @item.Title </b>
                            </a>
                        </div>
                        <div class="col-2 col-sm-2 col-md-3 col-lg-3 col-xl-3 m-auto" id="Icons">
                            <div class="d-flex" style="margin-left: 5px;">
                                <div class="bars-icon">
                                    <button type="button" data-toggle="modal" data-target="#exampleModal" style="border: none; padding: 0;">
                                        <a asp-page="/Movies/Detail" asp-route-id="@item.Id" class="btn btn-dark">                   
                                            <i class="fas fa-bars"></i>
                                        </a>
                                    </button>

                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content card">
                                                <h5 class="card-title d-inline-flex">Movie</h5>

                                                <div class="modal-header">

                                                    <img class="card-img-top" src="@item.Image" style="border-radius: 1rem;" alt="Card image cap">
                                                </div>
                                                <div class="modal-body">
                                                    <div class="d-flex justify-content-center">
                                                        <a href="./Index" class="card-link">
                                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                            <input type="hidden" asp-for="@item.Id" />
                                                        </a>
                                                    </div>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="./Movies/Index" class="card-link">
                                                            <h5 class="card-title d-inline-flex">@item.Title  فیلم</h5>
                                                        </a>
                                                    </div>

                                                    <a href="#" class="btn btn-warning">ImdbRate: @item.ImdbRate</a>
                                                    @foreach (var genre in item.Genre)
                                                    {
                                                        <p class="card-text text-right"> @genre :ژانر </p>
                                                    }
                                                    <p class="card-text"> محصول کشور: </p>
                                                    <p class="card-text">  @item.ProductYear :محصول سال </p>
                                                    <p class="card-text text-right"> @item.DirectorName : کارگردان</p>
                                                    @foreach (var actor in item.Actors)
                                                    {
                                                        <p class="card-text text-right"> @actor :بازیگران </p>
                                                    }
                                                    <p class="card-text text-right">  @item.Summery:خلاصه داستان</p>

                                                </div>
                                                <div class="modal-footer ml-auto mr-auto">
                                                    <a href="/Movies/Edit" class="btn btn-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-primary">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                    <a href="/Movies/Delete" class="btn btn-primary">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="trash-icon mx-1">
                                    <a href="./Movies/Delete" class="btn btn-dark">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div class="edit-icon">
                                    <a href="./Movies/Edit" class="btn btn-dark">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    <!--Info Middle Post-->

                    
                    <!--Picture Right Post-->

                    <!--Icon Left Post-->
                   
                   
                    <!--Info Middle Post-->
                    
                    <!--Icon Left Post-->
                  
                    <!--Info Middle Post-->
  
                    <!--Info Middle Post-->

                    <!--Picture Right Post-->

                    <!--Info Middle Post-->

                    <!--Picture Right Post-->

                    <!--Icon Left Post-->

                    <!--Info Middle Post-->

                    <!--Info Middle Post-->

                    <!--Picture Right Post-->

                    <!--Icon Left Post-->

                    <!--Icon Left Post-->

                    <!--Info Middle Post-->

                </div>
                <hr>
            </div>
            <hr>
            <!--Right-->
            <hr>
            <div class="col-4 d-none d-md-block" style="border-left: 1px solid #BBB;">
                <div class="row p-1">
                    <div class="col-6">
                        <div class="Info-User">
                            <div class="Top">
                                <small>All Info</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 Icon-User">
                        <div class="User-Admin-Icon">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-3">
                        <div class="Movie-Icon">
                            <a href="../Movies">
                                <h3>فیلم</h3>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-3">
                        <div class="Directors-Icon">
                            <a href="../Drc">
                                <h3>کارگردان </h3>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-3">
                        <div class="Actors-Icon">
                            <a href="../ActorRazor">
                                <h3>بازیگران</h3>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
</body>

</html>




