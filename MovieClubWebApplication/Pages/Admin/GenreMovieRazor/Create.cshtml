@page
@model MovieClubWebApplication.Pages.GenreMovieRazor.CreateModel
@{ ViewData["Detail"] = "GenreMovie Creation";
}
<h1>ایجاد ژانرفیلم جدید برای فیلم مورد نظر</h1>

<h4>اطلاعات ژانر فیلم</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="genreMovieCreation.MovieId" class="control-label"></label>
                <input asp-for="genreMovieCreation.MovieId" class="form-control" />
                <span asp-validation-for="genreMovieCreation.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="genreMovieCreation.GenreId" class="control-label"></label>
                <input asp-for="genreMovieCreation.GenreId" class="form-control" />
                <span asp-validation-for="genreMovieCreation.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">برگشت به صفحه اصلی</a>
</div>
