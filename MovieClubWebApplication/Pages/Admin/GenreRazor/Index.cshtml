@page
@model MovieClubWebApplication.Pages.GenreRazor.IndexModel
@{
    ViewData["Title"] = "Genres";
}
<h3 class="text-center bg-light">فهرست ژانرها</h3>
<hr>
@foreach (var item in Model.genreInput)
{
    <div class="card w-100 border-0 bg-light">

        <div class="card-body mt-3">
            <a class="card-link">
                <h5 class="card-title float-right d-inline"> @item.GenreName </h5>
            </a>
            <div class="card-footer text-center">
                <a asp-page="/GenreRazor/Detail" asp-route-id="@item.Id" class="btn btn-primary m-1">جزییات</a>

                <a asp-page="/GenreRazor/Delete" asp-route-id="@item.Id" class="btn btn-primary m-1">حذف</a>

                <a asp-page="/GenreRazor/Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">تغییر</a>
