@page
@model MovieClubWebApplication.Pages.Admin.ActorRazor.IndexModel
@{
    ViewData["Title"] = "Actors";
}


    <hr>
    <h3 class="text-center bg-light">Actors</h3>
    <hr>
    @foreach (var item in Model.actors)
    {
        <div class="card w-100 border-0 bg-light">
            
            <div class="card-body mt-3">
                <a href="#" class="card-link">
                    <h5 class="card-title float-right d-inline"> @item.ActorName </h5>
                </a>

                <div class="card-footer text-center">
                    <a asp-page="/ActorRazor/Detail" asp-route-id="@item.Id" class="btn btn-primary m-1">جزییات</a>
                    
                    <a asp-page="/ActorRazor/Delete" asp-route-id="@item.Id" class="btn btn-primary m-1">حذف</a>
                    
                    <a asp-page="/ActorRazor/Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">تغییر</a>
                    <a href="#" class="card-link"><i class="far fa-bell"></i></a>
                    <a href="#" class="card-link"><i class="far fa-comment-alt"></i></a>
                    <a href="#" class="card-link"><i class="far fa-heart"></i></a>
                    <a href="#" class="card-link"><i class="far fa-bookmark"></i></a>
                </div>
            </div>
        </div>

    };
