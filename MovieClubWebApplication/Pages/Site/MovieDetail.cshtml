@page
@model MovieClubWebApplication.Pages.Site.MovieDetailModel
@{
    ViewData["Title"] = "MovieDetails";
}

<h1>Details</h1>

<div>
    <h4>Existing List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.ImdbRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.ImdbRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Summery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.Summery)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.ProductYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.ProductYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.RateByUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.RateByUser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.VisitCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.VisitCount)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Genre)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.movieDetails.Genre)
            {
                <div class="col-7 col-sm-7 col-md-6 col-lg-6 col-xl-6 m-auto text-right" id="Content">
                    <a href="#" class="card-link">
                        <b class="card-title" style="margin-bottom: 0;"> @item </b>
                    </a>
                </div>
            }
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.Actors)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.movieDetails.Actors)
            {
                <div class="col-7 col-sm-7 col-md-6 col-lg-6 col-xl-6 m-auto text-right" id="Content">
                    <a href="#" class="card-link">
                        <b class="card-title" style="margin-bottom: 0;"> @item </b>
                    </a>
                </div>
            }
        </dd>



        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movieDetails.DirectorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.movieDetails.DirectorName)
        </dd>




    </dl>

</div>
