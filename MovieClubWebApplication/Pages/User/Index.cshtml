@page
@model MovieClubWebApplication.Pages.User.IndexModel
@{ ViewData["Title"] = "User Index";
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.rtlcss.com/bootstrap/v4.5.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="Style/Style-Movie.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<body>
    <div class="container-fluid mt-3">
        <!--Left-->
        <div class="row p-1">
            <div class="col-lg-12 col-md-12">
                <!--Top Left-->
                <div class="row">
                    <div class="col-12">
                        <a href="./User/Create" class="Add-Link">
                            <div class="Add mr-auto ml-auto mt-1">
                                <i class="far fa-plus-square"></i>
                            </div>
                        </a>
                    </div>
                </div>
                <hr>
                <!--Posts-->
                <div class="row mt-3" id="Post">
                    <!--Icon Left Post-->
                    @foreach (var item in Model.users) {

                        <div class="col-7 col-sm-7 col-md-6 col-lg-6 col-xl-6 m-auto text-right" id="Content">
                            <a href="#" class="card-link">
                                <b class="card-title" style="margin-bottom: 0;"> @item.Email </b>
                            </a>
                        </div>

                        <div class="col-2 col-sm-2 col-md-3 col-lg-3 col-xl-3 m-auto" id="Icons">
                            <div class="d-flex" style="margin-left: 5px;">

                                <div class="bars-icon">
                                    <button type="button" data-toggle="modal" data-target="#exampleModal" style="border: none; padding: 0;">
                                        <a asp-page="/User/Detail" asp-route-id="@item.Id" class="btn btn-dark">
                                            <i class="fas fa-bars"></i>
                                        </a>
                                    </button>
                                </div>

                                <div >
                                    <a asp-page="/User/Delete" asp-route-id="@item.Id" class="btn btn-dark">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>

                                <div class="edit-icon">
                                    <a asp-page="/User/Edit" asp-route-id="@item.Id" class="btn btn-dark">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>

                            </div>
                        </div>
                      }
                </div>
                <hr>
            </div>

        </div>
    </div>
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
</body>

</html>